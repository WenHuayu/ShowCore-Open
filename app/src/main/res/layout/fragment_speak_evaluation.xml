<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_64"
            android:background="?selectableItemBackgroundBorderless"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_32"
            android:paddingEnd="@dimen/dp_16">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_page_back_black_24dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/dp_32"
            android:src="@drawable/ic_app_speak_evaluation" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <View
            android:layout_width="@dimen/dp_172"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/dp_4"
            android:background="@drawable/bg_orange_rectangle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_12"
            android:text="@string/choose_test_language"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_24" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_108"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/mandarin_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:foreground="@drawable/bg_clickable_round_57dp">

            <LinearLayout
                android:layout_width="@dimen/dp_400"
                android:layout_height="@dimen/dp_100"
                android:background="@drawable/bg_blue_round_57dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginStart="@dimen/dp_100"
                    android:src="@drawable/ic_img_icon_chinese" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mandarin"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_28" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/american_english_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24"
            android:foreground="@drawable/bg_clickable_round_57dp">

            <LinearLayout
                android:layout_width="@dimen/dp_400"
                android:layout_height="@dimen/dp_100"
                android:background="@drawable/bg_green_round_57dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginStart="@dimen/dp_100"
                    android:src="@drawable/ic_img_icon_english" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/american_english"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_28" />

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>