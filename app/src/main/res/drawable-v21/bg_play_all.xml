<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp_18" />
            <solid android:color="@color/setup_primary" />
        </shape>
    </item>
    <item>
        <ripple android:color="?android:colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dp_18" />
                    <solid android:color="?android:colorControlActivated" />
                </shape>
                <color android:color="?android:colorControlActivated" />
            </item>
        </ripple>
    </item>
</layer-list>