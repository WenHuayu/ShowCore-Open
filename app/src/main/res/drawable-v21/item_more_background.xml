<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="@dimen/dp_20" />
            <stroke android:color="#F2F5F7" android:width="@dimen/dp_1" />
        </shape>
    </item>
    <item>
        <ripple android:color="?android:colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/dp_20" />
                    <solid android:color="?android:colorControlActivated" />
                </shape>
                <color android:color="?android:colorControlActivated" />
            </item>
        </ripple>
    </item>
</layer-list>