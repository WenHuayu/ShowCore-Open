<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="@dimen/dp_24" />
            <stroke
                android:width="@dimen/dp_1"
                android:color="@color/message_item_border" />
            <solid android:color="@color/message_item_background" />
        </shape>
    </item>
    <item>
        <ripple android:color="?colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape>
                    <corners android:radius="@dimen/dp_24" />
                    <solid android:color="?colorControlActivated" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>